
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="header">
                <div class="container">
                    <div class="logo">
                        <img src="" alt="">
                    </div>
                    <nav>
                        <ul>
                            <li><a href="{{ path('app_accueil')}}">Accueil</a></li>
                            <li><a href="{{ path('app_liste_glace')}}">Liste des Glaces</a></li>
                            <li><a href="{{ path('app_create_glace')}}">Ajouter une Glace</a></li>
                            {% if app.user %}
                                <li>Bienvenue, {{ app.user.email }}</li>
                                <li>
                                    <a href="{{ path('app_logout') }}"
                                    onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                                        Déconnexion
                                    </a>
                                    <form id="logout-form" action="{{ path('app_logout') }}" method="post" style="display: none;"></form>
                                </li>
                            {% else %}
                                <li><a href="{{ path('app_login') }}">Connexion</a></li>
                                <li><a href="{{ path('app_register') }}">Inscription</a></li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        {% endblock %}
        {% block main %}{% endblock %}
    </body>
</html>
